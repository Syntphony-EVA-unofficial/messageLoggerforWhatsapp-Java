{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Flask",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/main.py",
        "console": "integratedTerminal",
        "env": {
          "FLASK_APP": "${workspaceFolder}/main.py",
          "FLASK_ENV": "development"
        },
        "args": [
          "run",
          "--host=0.0.0.0",
          "--port=8080"
        ],
        "jinja": true,
        "justMyCode": true
      }
    ]
  }